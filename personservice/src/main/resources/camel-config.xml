<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:camel="http://camel.apache.org/schema/spring"
  xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

  <camelContext id="personService" xmlns="http://camel.apache.org/schema/spring">
  <restConfiguration component="servlet" port="8080" contextPath="/personService/rest" bindingMode="json">
    <dataFormatProperty key="prettyPrint" value="true"/>
  </restConfiguration>
  <rest path="/update">
    <post consumes="application/json" produces="application/json" type="com.redhat.techday.datamodel.Person">
      <to uri="direct:processPerson"/>
    </post>
  </rest>
  <route id="personService">
    <from uri="direct:processPerson"/>
    <log message="Received: ${body}" id="logRequest"/>
    <to uri="bpms://startProcess?baseUrl=http://localhost:8080/business-central/&amp;deploymentId=com.redhat:PersonProcess:1.0&amp;username=bpmsAdmin&amp;password=p@ssw0rd&amp;processId=PersonProcess.PersonProcess&amp;processVarName=p_person" id="callBpms"/>
    <choice id="isSuccess">
      <when id="success">
        <simple>${body.state} range '0..2'</simple>
        <log message="Successfully started BPMSTerminateEmployeeService process." loggingLevel="INFO" id="logSuccess"/>
        <log message="Response: ${body}" loggingLevel="DEBUG" id="logBpmsResponse"/>
      </when>
      <otherwise id="failure">
        <log message="Failed to start BPMSTerminateEmployeeService process. Response: ${body}" loggingLevel="ERROR" id="logFailure"/>
      </otherwise>
    </choice>
  </route>
</camelContext>
</beans>